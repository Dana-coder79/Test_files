while result == -1.0:
    BTC_rate = float(input("Please, enter bitcoin to dollar exchange rate"))
    Dollars_amount = float(input("Please, enter how much dollars do you have?"))
    if (BTC_rate <= 0.0) or (Dollars_amount < 0.0):
        result = -1.0
        print("You enter incorrect data. Please, try again")
    else:
        result = Dollars_amount/BTC_rate
        print( f"You can buy {result} BTC")
